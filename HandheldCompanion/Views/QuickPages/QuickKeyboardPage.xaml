<Page
    x:Class="HandheldCompanion.Views.QuickPages.QuickKeyboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:l="clr-namespace:HandheldCompanion.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:HandheldCompanion.Properties"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:viewmodels="clr-namespace:HandheldCompanion.ViewModels"
    Name="QuickKeyboard"
    Margin="15,0,0,6"
    d:Height="450"
    d:Width="940"
    KeepAlive="True"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
        </Grid.RowDefinitions>

        <!--  Row 1: 10 keys  -->
        <Grid x:Name="Row1Panel" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="6"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="7"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="9"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
        </Grid>

        <!--  Row 2: 10 keys  -->
        <Grid x:Name="Row2Panel" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="6"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="7"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="9"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
        </Grid>

        <!--  Row 3: Shift + 7 letters + Backspace  -->
        <Grid x:Name="Row3Panel" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <!--  Shift + Layout switch stacked  -->
            <Grid Grid.Column="0">
                <ToggleButton
                    x:Name="ShiftToggle"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Checked="ShiftToggle_Checked"
                    Tag="Shift"
                    Unchecked="ShiftToggle_Unchecked">
                    <ui:FontIcon Glyph="&#xe752;" />
                </ToggleButton>
                <Button
                    x:Name="LayoutSwitch"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="LayoutSwitch_Click">
                    <ui:FontIcon Glyph="&#xe761;" />
                    <!--  e761 (right)  -->
                    <!--  e762 (left)  -->
                </Button>
            </Grid>

            <!--  7 letter buttons  -->
            <Button
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="6"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Button
                Grid.Column="7"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />

            <!--  Backspace  -->
            <Button
                x:Name="Backspace"
                Grid.Column="8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <ui:FontIcon Glyph="&#xe750;" />
            </Button>
        </Grid>

        <!--  Row 4: Switch, comma, space, period, return, blank  -->
        <Grid x:Name="Row4Panel" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <Button
                Name="SwitchTo123"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Click="SwitchTo123_Click"
                Content="123" />

            <Button
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />

            <Button
                x:Name="SpaceBar"
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Tag=" " />

            <Button
                Grid.Column="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />

            <Button
                Grid.Column="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Content="?" />

            <Button
                x:Name="Return"
                Grid.Column="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <ui:FontIcon Glyph="&#xe751;" />
            </Button>
        </Grid>
    </Grid>
</Page>